<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_add_approve_reason_form" model="ir.ui.view">
		<field name="name">po.approve.reason.form</field>
		<field name="model">po.approve.reason</field>
		<field name="arch" type="xml">
			<form string="Approve Reason">
				<group>
					<field name="po_approve_comment"/>
				</group>
				<footer>
					<button string="Approve" name="approve_reason" type="object" class="btn-primary"/>
					<button string='Cancel' class='btn-default' special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>
