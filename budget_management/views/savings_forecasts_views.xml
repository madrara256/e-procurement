<odoo>
	<data>
		<record id="sequence_saving_code" model="ir.sequence">
			<field name="name">savings sequence</field>
			<field name="code">savings.sequence.code</field>
			<field name="active">TRUE</field>
			<field name="prefix">SVPROJ</field>
			<field name="padding">6</field>
			<field name="number_next">1</field>
			<field name="number_increment">1</field>
		</record>

		<record model='ir.ui.view' id='savings_forecasts_tree'>
			<field name='name'>Projections</field>
			<field name='model'>savings.forecasts</field>
			<field name='arch' type='xml'>
				<tree string="description">
					<field name="name"/>
					<!-- <field name="team_id"/> -->
					<field name="year"/>
					<field name="active"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="savings_forecasts_form">
			<field name="name">Savings Projections</field>
			<field name="model">savings.forecasts</field>
			<field name="arch" type="xml">
				<form string="description">
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
							</button>
						</div>
						<group>
							<group>
								<field name="name"/>
								<!-- <field name="team_id"/> -->
							</group>
							<group>
								<!-- <label for="date_from"/>
								<div>
									<field name="date_from" widget="date" class="oe_inline"/>
									<field name="date_to" widget="date" class="oe_inline"/>
								</div> -->
								<field name="active"/>
							</group>
						</group>
						<!-- <notebook>
							<page string="Loan Projections">
								<field name="projection_period_id" widget="one2many">
									<tree string="Projection Details" editable="button">
										<field name="name"/>
										<field name="forecasts_volume"/>
										<field name="forecast_cases"/>
										<field name="actual_volume"/>
										<field name="actual_cases"/>
									</tree>
								</field>
							</page>
						</notebook> -->
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

		<record id="savings_forecasts_filter" model="ir.ui.view">
			<field name="name">savings forecasts filter</field>
			<field name="model">savings.forecasts</field>
			<field name="arch" type="xml">
				<search string="String">
					
				</search>
			</field>
		</record>

		<record id="savings_forecasts_kanban" model="ir.ui.view">
			<field name="name">Savings Forecasts</field>
			<field name="model">savings.forecasts</field>
			<field name="arch" type="xml">
				<kanban default_group_by="month" class="o_kanban_medium_column" import="false" disable_drag_drop_record="true">
					<field name="month"/>
					<field name="active"/>
					<field name="color"/>
					<field name="name"/>
					<templates>
						<t t-name="kanban-box">
							<div class="#{kanban_color(record.color.raw_value)}">
								<div class="o_dropdown_kanban dropdown" groups="base.group_user">
									<a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
										<span class="fa fa-ellipsis-v"/>
									</a>
									<div class="dropdown-menu" role="menu">
										<t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item"><i class="fa fa-pencil-square-o" />Edit</a></t>
										<t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item"><i class="fa fa-trash-o" />Delete</a></t>
									</div>
								</div>
								<div class="o_kanban_content">
									<div class="o_kanban_details">
										<div class="o_kanban_details_wrapper">
											<!-- <div class="o_kanban_record_title o_text_overflow">
												<span class="pull-left text-left" style="font-size:14px;font-weight:normal;">
													<div class="o_primary"><strong><field name="team_id"/></strong></div>
												</span>
											</div> -->
											<div class="o_kanban_record_body">
												<!-- <span>Volume forecast: <field name="forecast_volume"/></span><br/>
												<span>Case forecast: <field name="forecast_cases"/></span><br/> -->
												<div class="row">
													<div class="col-xl-6 o_kanban_primary_left">
														<span></span>
													</div>
													<div class="col-xl-6 o_kanban_primary_right">
														<span></span>
													</div>
												</div>
												<div>

												</div>
											</div>

											<div class="o_kanban_record_bottom">
												<div class="oe_kanban_bottom_left">

												</div>
												<div class="oe_kanban_bottom_right">
													<img t-att-src="kanban_image('budget.management', 'image_small', record.team_id.raw_value)" t-att-title="record.team_id.value" t-att-alt="record.team_id.value" width="24" height="24" class="oe_kanban_avatar float-right"/>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</t>
					</templates>
					<searchpanel>
						<field name="month"/>
					</searchpanel>
				</kanban>
			</field>
		</record>

		<record id="savings_forecasts_action" model="ir.actions.act_window">
			<field name="name">Savings forecasts</field>
			<field name="res_model">savings.forecasts</field>
			<field name="view_mode">kanban,form,pivot,graph,activity</field>
			<field name="context">{}</field>
			<field name="domain">[]</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Annual Savings forecasts/Projections
				</p>
				<p>
					This window shows the savings projections/savings forecasts for the current year
				</p>
			</field>
		</record>

		<menuitem
			id="savings_forecasts_menu"
			name="Savings Forecasts"
			parent="budget_forecasts_menu"
			action="savings_forecasts_action"
			sequence="1"/>

		<record id="savings_forecasts_analysis_action" model="ir.actions.act_window">
			<field name="name">Savings forecast Analysis</field>
			<field name="res_model">savings.forecasts</field>
			<field name="view_mode">graph,pivot</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Annual savings forecasts/Projections analysis
				</p>
				<p>
					This window shows the savings projections/forecasts analysis for the current year
				</p>
			</field>
		</record>

	</data>
</odoo>
