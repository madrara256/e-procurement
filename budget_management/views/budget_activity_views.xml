<odoo>
	<data>
		<record id="budget_activity_form" model="ir.ui.view">
			<field name="name">Budget Activity</field>
			<field name="model">budget.activity</field>
			<field name="arch" type="xml">
				<form string="Budget Activity">
					<sheet>
						<group>
							<group>
								<field name="name" invisible="1"/>
								<field name="budget_id"/>
								<field name="department_id"/>
							</group>
							<group>
								<field name="budget_amount"/>
								<field name="color" invisible="1"/>
								<field name="active" invisible="0"/>
							</group>
						</group>
						<notebook>
							<page string="Budget Activity">
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_budget_activity_tree" model="ir.ui.view">
			<field name="name">Budget Activity</field>
			<field name="model">budget.activity</field>
			<field name="arch" type="xml">
				<tree string="Budget Activity">
					<field name="budget_id"/>
					<field name="department_id"/>
					<field name="active"/>
				</tree>
			</field>
		</record>

		<record id="budget_activity_action" model="ir.actions.act_window">
			<field name="name">Budget Activity</field>
			<field name="res_model">budget.activity</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,pivot,tree,form,graph</field>
			<field name="context">{}</field>
			<field name="domain">[]</field>
			<field name="help" type="html">
				<p class="o_view_content_smiling_face">
					Create Budget Activity for the Running Budgets
				</p>
				<p>
					Shows the activities per budget based on items purchased in that particular line budget
				</p>
			</field>
		</record>

		<record id="budget_activity_kanban_view" model="ir.ui.view">
			<field name="name">Budget Activity</field>
			<field name="model">budget.activity</field>
			<field name="arch" type="xml">
				<kanban class="o_kanban_large_column" disable_drag_drop_record="true">
					<field name="name"/>
					<field name="budget_id"/>
					<field name="department_id"/>
					<templates>
						<t t-name="kanban-box">

							<div class="#{kanban_color(record.color.raw_value)}">
								<div class="o_dropdown_kanban dropdown" groups="base.group_user">
									<a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
										<span class="fa fa-ellipsis-v"/>
									</a>
									<div class="dropdown-menu" role="menu">
										<a role="menuitem" type="open" class="dropdown-item">
											<i class="fa fa-external-link" /> Open
										</a>
										<t t-if="widget.editable">
											<a role="menuitem" type="edit" class="dropdown-item">
												<i class="fa fa-pencil-square-o" /> Edit
											</a>
										</t>
										<t t-if="widget.deletable">
											<a role="menuitem" type="delete" class="dropdown-item">
												<i class="fa fa-trash-o" /> Delete
											</a>
										</t>
										<t t-if="record.active">
											<a role="menuitem" name="toggle_active" type="object" class="dropdown-item">
												<i class="fa fa-archive" /> Archive
											</a>
										</t>
											<t t-if="!record.active"><a role="menuitem" name="toggle_active" type="object" class="dropdown-item"><i class="fa fa-archive" /> Unarchive</a>
										</t>
									</div>
								</div>

								<div class="oe_kanban_content">
									<div class="o_kanban_details">
										<div class="o_kanban_details_wrapper">
											<div class="o_kanban_record_title o_text_overflow">
												<span class="pull-left text-left" style="font-size:14px;font-weight:normal; font-family:Arial;">
													<a type="open">
														<div class="o_primary"><strong><field name="budget_id"/></strong></div>
													</a>
												</span>
											</div>
											<div class="oe_kanban_body">
												<div class="row">
													<div class="col-xl-6 o_kanban_primary_left">
														<span style="font-size:12px;font-family:Arial;">Budget Balance
															<field name="budget_amount"/>
														</span>
													</div>
													<div class="col-xl-6 o_kanban_primary_right">

													</div>
												</div>
												<div class="row">
													<div class="col-xl-12 o_kanban_primary_center">
														<button class="btn btn-sm btn-block btn-primary" type="open">Open Activity</button>
													</div>
												</div>
											</div>
											<div class="oe_kanban_footer">
												<div class="oe_kanban_footer_left">

												</div>
												<div class="oe_kanban_footer_right">

												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</t>
					</templates>
					<searchpanel>
						<field name="department_id"/>
					</searchpanel>
				</kanban>
			</field>
		</record>

		<menuitem id="budget_activity_menu"
			name="Budget Activity"
			parent="menu_root_budget"
			action="budget_activity_action"
			sequence="4"/>
	</data>
</odoo>
